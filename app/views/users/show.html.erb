<div>
  <%= flash[:notice] %>
</div>

<div class= "container">
  <div class= "row">

    <div class="col-md-3 ">

        <%= render 'books/lists', book: Book.new, user: @user %>


    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th><%= link_to user_path(book.user) do %><%= image_tag @user.get_profile_image %><% end %></th>
               <th><%= link_to  book_path(book.id),class:"edit_link" do %><%= book.title %><% end %></th>
              <th><%= book.body %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>




