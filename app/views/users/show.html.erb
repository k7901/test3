<div class= "container">
  <div class= "row">
      
    <div class="col-md-3 ">
        <%= render 'books/lists', book: Book.new ,user: @user %>
    </div> 
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <th><%= image_tag @user.get_profile_image %></th> 
            <th><%= @book.title %></th>
              <th><%= @book.body %></th>
          </tbody>
        </table>
    </div> 
  </div>
</div>




