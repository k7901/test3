<div>
  <%= flash[:notice] %>
</div>

<div class= "container">
  <div class= "row">

    <div class="col-md-3 ">
      <%= render 'books/errors', user: @user %>

        <%= render 'books/lists', book: Book.new ,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>

               <th>Image</th>
               <th>Name</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                 <th><%= image_tag @user.get_profile_image %></th>
                    <th> <%= @user.name %></th>

                <th><%= link_to "show", user_path(@user) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>