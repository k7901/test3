<div class="container">
  <div class="row">
    <div class="col-m-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
       <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this user from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
       <% end %>

       <%= form_with model: @user, url:user_path(current_user.id) do |f| %>
            <h4>Name </h4>
              <%= f.text_field :name, size: "50" %>
            <h4>Image  </h4>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <h4>Introduction </h4>
              <%= f.text_field :introduction, size: "50x10" %>
            <%= f.submit "Update User", class: "btn btn-secondary btn-sm" %>
       <% end %>

    </div>
  </div>
</div>

