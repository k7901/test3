<div class= "container">
  <div class= "row">

    <div class="col-md-3 ">
        <%= render 'lists', book: Book.new  %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th><%= image_tag @user.get_profile_image %></th> 
                <th><%= link_to  book_path(@user.id),class:"edit_link" do %><%= book.title %><% end %></th>
                <th><%= book.body %></th>
             </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>