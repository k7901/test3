<div>
  <%= flash[:notice] %>
</div>

<div class= "container">
  <div class= "row">

    <div class="col-md-3 ">

        <%= render 'error',  book: @book %>
        <%= render 'lists', book: Book.new, user: @book.user %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
             <tr>
              <th><%= link_to user_path do %><%= image_tag @book.user.get_profile_image %><% end %><br>
                  <%= link_to  user_path ,class:"edit_link" do %><%= @book.user.name %> <% end %></th>
              <th><%= link_to  book_path ,class:"edit_link" do %><%= @book.title %> <% end %></th>
              <th><%= @book.body %></th>
              <% if current_user == @book.user %>
              <th><%= link_to 'Edit', edit_book_path, class: "btn btn-success btn-sm" %></th>
              <th><%= link_to 'Destroy', book_path, method: :delete, class: "btn btn-danger btn-sm" ,"data-confirm" => "本当に削除しますか？" %></th>

            <% end %></tr>
          </tbody>
        </table>
    </div>
  </div>
</div>