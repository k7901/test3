<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/cb055c06a1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white ">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
           <a class="navbar-brand"><%= link_to  root_path, class: "btn btn-block"'nav-link text-white ' do %>
             <strong>Bookers</strong>
              <% end %>
           </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>


            <li class="nav-item">
              <%= link_to  user_path(current_user.id), class: "btn btn-block"'nav-link text-white' do %>
                 <i class="fa-solid fa-house"></i>
                  Home<% end %>
            </li>
            <li class="nav-item">
              <%= link_to  users_path, class: "btn btn-block"'nav-link text-white' do %>
                <i class="fa-solid fa-users"></i>
               Users<% end %>
            <li class="nav-item">
              <%= link_to  books_path, class: "btn btn-block"'nav-link text-white' do %>
              <i class="fa-solid fa-book-open"></i>
              Books<% end %>
            </li>
            <li class="nav-item">
              <%= link_to  destroy_user_session_path, method: :delete, class: "btn btn-block"'nav-link text-white' do %>
              <i class="fa-solid fa-right-from-bracket"></i>
              Log outs<% end %>
            </li>

            <% else %>

            <li class="nav-item">
              <%= link_to  root_path, class: "btn btn-block"'nav-link text-white' do %>
              <i class="fa-solid fa-house"></i>
              Home<% end %>
            </li>
            <li class="nav-item">
              <%= link_to  about_path, class: "btn btn-block"'nav-link text-white' do %>
               <i class="fa-solid fa-link"></i>
               About<% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_user_registration_path, class: "btn btn-block"'nav-link text-white' do %>
              <i class="fa-solid fa-user-plus"></i>
              Sign up<% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_user_session_path ,class: "btn btn-block"'nav-link text-white' do %>
              <i class="fa-solid fa-right-to-bracket"></i>
              Log in<% end %>
            </li>
            <% end %>
           </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
       <%= yield %>
    </main>
     <footer class="bg-white">
       <div class="container">
          <div class="row no-gutters">
            <div class="col-md-3 mx-auto mt-5">
    	         <p>CopyRight Infratop.inc</p>
      	    </div>
        	</div>
       </div>
    </footer>


  </body>
</html>
